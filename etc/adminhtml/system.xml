<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment" translate="label" type="text" sortOrder="400" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <group
                id="webbhuset_sveacheckout"
                translate="label"
                type="text"
                sortOrder="30"
                showInDefault="1"
               showInWebsite="1"
                showInStore="1"
            >
                <label>Svea Ekonomi Checkout</label>
                <field
                        id="active"
                        translate="label"
                        type="select"
                        sortOrder="1"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field
                        id="test_mode"
                        translate="label"
                        type="select"
                        sortOrder="2"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Test Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field
                        id='merchant_id'
                        translate='label'
                        type='text'
                        sortOrder='3'
                        showInDefault='1'
                        showInWebsite='1'
                        showInStore='1'
                >
                    <label>Checkout merchant ID</label>
                    <comment><![CDATA[]]></comment>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id='enable'>1</field>
                    </depends>
                </field>
                <field
                        id='shared_secret'
                        translate='label'
                        type='text'
                        sortOrder='4'
                        showInDefault='1'
                        showInWebsite='1'
                        showInStore='1'
                >
                    <label>Shared secret</label>
                    <comment><![CDATA[]]></comment>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id='enable'>1</field>
                    </depends>
                </field>
                <field
                        id="order_status"
                        translate="label"
                        type="select"
                        sortOrder="100"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>New Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\Newprocessing</source_model>
                </field>
                <field
                        id="acknowledged_order_status"
                        translate="label"
                        type="select"
                        sortOrder="100"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Acknowledged Order Status</label>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\Newprocessing</source_model>
                </field>
                <field
                        id="sort_order"
                        translate="label"
                        type="text"
                        sortOrder="110"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Sort Order</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field
                        id="title"
                        translate="label"
                        type="text"
                        sortOrder="120"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Title</label>
                </field>
                <field
                        id="allowspecific"
                        translate="label"
                        type="allowspecific"
                        sortOrder="130"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field
                        id="specificcountry"
                        translate="label"
                        type="multiselect"
                        sortOrder="140"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Payment from Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field
                        id="purchase_locale"
                        translate="label"
                        type="select"
                        sortOrder="150"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Locale
                        &lt;br /&gt;
                        &lt;small&gt;
                        &lt;i&gt;Should match default country setting in
                        Store-&gt;Configuration-&gt;->General-&gt;Default Country.&lt;/i&gt;
                        &lt;small&gt;
                    </label>
                    <source_model>Webbhuset\Sveacheckout\Model\Config\Source\Locale</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field
                        id="enable_international_purchases"
                        translate="label"
                        type="select"
                        sortOrder="151"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Enable switching destination country in checkout</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <can_be_empty>0</can_be_empty>
                </field>
                <field
                    id="include_options_on_invoice"
                    translate="label"
                    type="select"
                    sortOrder="155"
                    showInDefault="1"
                    showInWebsite="0"
                    showInStore="0"
                >
                    <label>Send item options to Svea, will be shown on invoice</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field
                        id="allowed_customers"
                        translate="label"
                        type="select"
                        sortOrder="156"
                        showInDefault="1"
                        showInWebsite="0"
                        showInStore="0"
                >
                    <label>
                        (optional) Select Market
                        &lt;br /&gt;
                        &lt;small&gt;
                        &lt;i&gt;Your visitor has the option to switch between customer type company and individual
                        during checkout. This setting dictates which option is pre chosen and if visitor should
                        have the option too switch between individual and company at all.&lt;/i&gt;
                        &lt;small&gt;
                    </label>
                    <source_model>Webbhuset\Sveacheckout\Model\Config\Source\CustomerType</source_model>
                </field>
                <field
                        id="override_terms_url"
                        translate="label"
                        type="select"
                        sortOrder="156"
                        showInDefault="1"
                        showInWebsite="0"
                        showInStore="0"
                >
                    <label>Override Terms url?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field
                        id="terms_url"
                        translate="label"
                        type="text"
                        sortOrder="157"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Terms URL
                        &lt;br /&gt;
                        &lt;small&gt;
                        &lt;i&gt;e.g: https://example.com/terms/&lt;/i&gt;
                        &lt;small&gt;
                    </label>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field
                        id="shipping_mobile"
                        translate="label"
                        type="select"
                        sortOrder="158"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Show shipping selector in mobile view?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <group
                    id="developers"
                    translate="label"
                    type="text"
                    sortOrder="160"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1"
                >
                <label>Developers / Advaced</label>
                    <field
                            id="debug"
                            translate="label"
                            type="select"
                            sortOrder="10"
                            showInDefault="1"
                            showInWebsite="1"
                            showInStore="1"
                    >
                        <label>Debug</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field
                        id="callback_uri_override"
                        translate="label"
                        type="select"
                        sortOrder="20"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                    >
                        <label>Activate Callback URI override</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field
                        id="callback_uri"
                        translate="label"
                        type="text"
                        sortOrder="30"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                    >
                        <label>Callback/Push URI override
                            &lt;br /&gt;
                            &lt;small&gt;
                            &lt;i&gt;will override base-url part&lt;/i&gt;
                            &lt;small&gt;
                        </label>
                        <can_be_empty>1</can_be_empty>
                    </field>
                    <field
                            id="reference"
                            translate="label"
                            type="select"
                            sortOrder="30"
                            showInDefault="1"
                            showInWebsite="1"
                            showInStore="1"
                    >
                        <label><![CDATA[
                                    Suffix is a duplicate id countermeasure <br/>
                                    <strong>do not</strong> use plain id's on a stage or dev environment<br/>
                                    if the range can overlap with another environment.
                                ]]>
                        </label>
                        <source_model>Webbhuset\Sveacheckout\Model\Config\Source\Reference</source_model>
                    </field>
                    <field
                            id="prefer_simple_integration"
                            translate="label"
                            type="select"
                            sortOrder="50"
                            showInDefault="1"
                            showInWebsite="1"
                            showInStore="1"
                    >
                        <label><![CDATA[
                        Will use deliverOrder / refundAmount instead of taking action on rows.<br/>
                        <i>Will effectively disable partial deliveries.</i>
                        ]]></label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
